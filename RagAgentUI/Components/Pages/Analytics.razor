@page "/analytics"
@using RagAgentUI.Services
@using RagAgentUI.Models
@inject RagApiClient ApiClient

<div class="min-h-screen bg-gray-50 dark:bg-gray-900 py-12 px-4">
  <div class="max-w-6xl mx-auto">
  <div class="mb-8">
       <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">
        Agent Performance
      </h1>
     <p class="text-gray-600 dark:text-gray-400">
        Monitor agent execution statistics and performance metrics
   </p>
  </div>
  
  @if (stats == null)
 {
   <div class="text-center py-12">
    <div class="inline-block w-8 h-8 border-4 border-blue-500 border-t-transparent rounded-full animate-spin"></div>
   <p class="text-gray-500 mt-4">Loading analytics...</p>
     </div>
   }
    else if (!stats.Stats.Any())
  {
   <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-12 text-center">
      <p class="text-gray-500">No agent executions found. Ingest some documents to see statistics.</p>
   </div>
 }
     else
   {
   <!-- Summary Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-6">
     <div class="flex items-center gap-4">
      <div class="w-12 h-12 bg-blue-100 dark:bg-blue-900 rounded-lg flex items-center justify-center">
       <span class="text-2xl">ðŸ¤–</span>
      </div>
      <div>
 <p class="text-sm text-gray-600 dark:text-gray-400">Total Executions</p>
       <p class="text-2xl font-bold text-gray-900 dark:text-white">
      @stats.Stats.Sum(s => s.ExecutionCount)
  </p>
   </div>
   </div>
   </div>
 
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-6">
     <div class="flex items-center gap-4">
        <div class="w-12 h-12 bg-green-100 dark:bg-green-900 rounded-lg flex items-center justify-center">
      <span class="text-2xl">âœ…</span>
       </div>
      <div>
       <p class="text-sm text-gray-600 dark:text-gray-400">Success Rate</p>
       <p class="text-2xl font-bold text-gray-900 dark:text-white">
     @Math.Round(stats.Stats.Average(s => s.SuccessRate) * 100, 1)%
 </p>
        </div>
      </div>
     </div>
    
  <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-6">
       <div class="flex items-center gap-4">
    <div class="w-12 h-12 bg-purple-100 dark:bg-purple-900 rounded-lg flex items-center justify-center">
      <span class="text-2xl">âš¡</span>
    </div>
     <div>
 <p class="text-sm text-gray-600 dark:text-gray-400">Avg Duration</p>
     <p class="text-2xl font-bold text-gray-900 dark:text-white">
    @Math.Round(stats.Stats.Average(s => s.AvgDurationMs), 0)ms
 </p>
    </div>
  </div>
  </div>
    </div>
  
 <!-- Agent Table -->
       <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg overflow-hidden">
    <table class="w-full">
         <thead class="bg-gray-50 dark:bg-gray-700">
        <tr>
      <th class="px-6 py-4 text-left text-sm font-semibold text-gray-900 dark:text-white">
     Agent Name
       </th>
   <th class="px-6 py-4 text-left text-sm font-semibold text-gray-900 dark:text-white">
    Executions
     </th>
      <th class="px-6 py-4 text-left text-sm font-semibold text-gray-900 dark:text-white">
     Avg Duration
   </th>
   <th class="px-6 py-4 text-left text-sm font-semibold text-gray-900 dark:text-white">
  Success Rate
      </th>
    </tr>
      </thead>
    <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
    @foreach (var stat in stats.Stats.OrderByDescending(s => s.ExecutionCount))
      {
       <tr class="hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
    <td class="px-6 py-4">
 <span class="font-medium text-gray-900 dark:text-white">
    @stat.AgentName
    </span>
     </td>
    <td class="px-6 py-4 text-gray-600 dark:text-gray-400">
      @stat.ExecutionCount
     </td>
    <td class="px-6 py-4 text-gray-600 dark:text-gray-400">
     @Math.Round(stat.AvgDurationMs, 0) ms
 </td>
     <td class="px-6 py-4">
   <div class="flex items-center gap-3">
      <div class="flex-1 bg-gray-200 dark:bg-gray-600 rounded-full h-2 max-w-[100px]">
     <div class="@(stat.SuccessRate > 0.9 ? "bg-green-500" : stat.SuccessRate > 0.7 ? "bg-yellow-500" : "bg-red-500") 
  h-2 rounded-full transition-all"
   style="width: @(stat.SuccessRate * 100)%"></div>
 </div>
      <span class="text-sm text-gray-600 dark:text-gray-400">
    @Math.Round(stat.SuccessRate * 100, 1)%
   </span>
  </div>
   </td>
   </tr>
     }
  </tbody>
  </table>
    </div>
      }
     </div>
</div>

@code {
 private AgentStatsResponse? stats;
    
    protected override async Task OnInitializedAsync()
   {
     await LoadStats();
   }
   
   private async Task LoadStats()
    {
       stats = await ApiClient.GetAgentStatsAsync(days: 7);
 }
}